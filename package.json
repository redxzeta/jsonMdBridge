{
  "name": "jsonmd-bridge",
  "version": "1.0.0",
  "description": "A lightweight TypeScript library for converting JSON â†” Markdown with zero dependencies",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build",
    "semantic-release": "semantic-release",
    "test:sample": "pnpm build && node test-script.js"
  },
  "keywords": [
    "json",
    "markdown",
    "converter",
    "transform",
    "parser",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/redxzeta/jsonMdBridge.git"
  },
  "packageManager": "pnpm@8.15.0",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.2.1",
    "semantic-release": "^22.0.12",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}

